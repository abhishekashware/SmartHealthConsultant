<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rela"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/doctor_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:id="@+id/message_sender_profile_image" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="Message"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/message_sender_profile_image" />

    <ImageView
        android:id="@+id/msg_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="160dp"
        android:maxWidth="140dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/txt_msg"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="200dp"
        android:layout_toEndOf="@+id/txt_msg"
        android:layout_alignStart="@+id/txt_msg" />



</RelativeLayout>